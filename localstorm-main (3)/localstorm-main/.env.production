# Production Environment Configuration
# DO NOT commit this file to version control

# Environment
ENVIRONMENT=production
DEBUG=False

# Security
SECRET_KEY=prod_secret_key_change_this_in_heroku
JWT_SECRET_KEY=prod_jwt_secret_change_this_in_heroku

# Database (Heroku Postgres)
DATABASE_URL=postgresql://production_user:production_pass@production_host:5432/production_db

# CORS and Allowed Hosts
CORS_ORIGINS=https://www.cape-control.com,https://cape-control.com
ALLOWED_HOSTS=www.cape-control.com,cape-control.com

# API Configuration
API_BASE_URL=https://www.cape-control.com/api
FRONTEND_ORIGIN=https://www.cape-control.com

# React App Configuration
REACT_APP_API_URL=https://www.cape-control.com/api
REACT_APP_ENVIRONMENT=production

# Email Configuration (Production SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=production_email@cape-control.com
SMTP_PASSWORD=production_email_password
FROM_EMAIL=noreply@cape-control.com

# AI Services (if used)
OPENAI_API_KEY=production_openai_key_if_needed

# S3 Configuration
AWS_ACCESS_KEY_ID=production_aws_access_key
AWS_SECRET_ACCESS_KEY=production_aws_secret_key
AWS_STORAGE_BUCKET_NAME=lightning-s3
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=lightning-s3.s3.us-east-1.amazonaws.com

# Session Configuration
SESSION_SECRET=production_session_secret_change_this

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
