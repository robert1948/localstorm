# =============================================================================
# CapeAI Enterprise Platform - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env files to version control!

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/capeai_db
REDIS_URL=redis://localhost:6379/0

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# üîê SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Encryption Keys (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key-here
DATA_ENCRYPTION_ENABLED=true

# =============================================================================
# ü§ñ AI PROVIDER API KEYS
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-org-id
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_MODEL_GPT4=gpt-4-turbo-preview
OPENAI_MODEL_GPT35=gpt-3.5-turbo

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_MODEL_CLAUDE3=claude-3-opus-20240229
ANTHROPIC_MODEL_CLAUDE2=claude-2.1

# Google AI Configuration
GOOGLE_API_KEY=your-google-ai-api-key-here
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_MODEL_GEMINI_PRO=gemini-pro
GOOGLE_MODEL_GEMINI_VISION=gemini-pro-vision

# AI Provider Fallback Configuration
AI_FALLBACK_ENABLED=true
AI_PROVIDER_PRIORITY=["openai", "anthropic", "google"]
AI_RETRY_ATTEMPTS=3
AI_TIMEOUT_SECONDS=30

# =============================================================================
# üìä MONITORING & ANALYTICS CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
METRICS_COLLECTION_INTERVAL=60

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
REQUEST_TIMEOUT=30
MEMORY_MONITORING=true
CPU_MONITORING=true

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_RETENTION_DAYS=30
SENTRY_DSN=your-sentry-dsn-here

# Business Intelligence
QUALITY_SCORING_ENABLED=true
PROVIDER_ANALYTICS_ENABLED=true
USER_BEHAVIOR_TRACKING=true
INTERACTION_ANALYTICS=true

# =============================================================================
# üö´ RATE LIMITING & DDOS PROTECTION
# =============================================================================
RATE_LIMIT_ENABLED=true
GENERAL_RATE_LIMIT=100/minute
AI_RATE_LIMIT=30/minute
AUTH_RATE_LIMIT=10/minute
UPLOAD_RATE_LIMIT=5/minute

# DDoS Protection
DDOS_PROTECTION=true
BURST_PROTECTION=true
IP_WHITELIST=["127.0.0.1", "::1"]
IP_BLACKLIST=[]

# Rate Limiting Storage
RATE_LIMIT_STORAGE=redis
RATE_LIMIT_KEY_PREFIX=capeai:ratelimit

# =============================================================================
# üõ°Ô∏è SECURITY FEATURES
# =============================================================================
INPUT_SANITIZATION=true
CONTENT_MODERATION=true
PII_DETECTION=true
XSS_PROTECTION=true
CSRF_PROTECTION=true

# Content Security
MAX_INPUT_LENGTH=10000
ALLOWED_CONTENT_TYPES=["text/plain", "application/json"]
BLOCKED_KEYWORDS=["<script>", "javascript:", "vbscript:"]

# Audit Logging
AUDIT_LOGGING=true
AUDIT_RETENTION_DAYS=365
AUDIT_LOG_LEVEL=INFO
SECURITY_EVENT_ALERTS=true

# =============================================================================
# üìß EMAIL CONFIGURATION
# =============================================================================
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@capeai.com
EMAIL_FROM_NAME=CapeAI Platform

# Email Templates
EMAIL_TEMPLATE_DIR=templates/email
NOTIFICATION_EMAIL_ENABLED=true
ALERT_EMAIL_ENABLED=true

# =============================================================================
# üì± APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=CapeAI Enterprise Platform
APP_VERSION=2.1.6
APP_DESCRIPTION=Multi-provider AI platform with enterprise analytics
APP_URL=https://your-domain.com
API_PREFIX=/api
DEBUG=false
TESTING=false
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=production
STAGE=prod

# =============================================================================
# üåê CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
ALLOWED_HEADERS=["*"]
ALLOW_CREDENTIALS=true
MAX_AGE=86400

# =============================================================================
# üìÅ FILE UPLOAD CONFIGURATION
# =============================================================================
FILE_UPLOAD_ENABLED=true
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5
ALLOWED_FILE_TYPES=["audio/wav", "audio/mp3", "audio/ogg", "audio/m4a", "image/jpeg", "image/png"]
UPLOAD_DIRECTORY=uploads/
TEMP_DIRECTORY=temp/

# File Processing
FILE_VIRUS_SCANNING=false
FILE_COMPRESSION=true
FILE_ENCRYPTION=false

# =============================================================================
# üéôÔ∏è VOICE INTEGRATION CONFIGURATION
# =============================================================================
VOICE_ENABLED=true
STT_PROVIDER=openai
TTS_PROVIDER=elevenlabs
VOICE_MODEL_WHISPER=whisper-1
VOICE_LANGUAGE_AUTO_DETECT=true
SUPPORTED_LANGUAGES=["en", "es", "fr", "de", "it", "pt", "ja", "ko", "zh"]

# ElevenLabs Configuration (for TTS)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=default-voice-id

# Voice Processing
AUDIO_MAX_DURATION=300
AUDIO_QUALITY=high
NOISE_REDUCTION=true

# =============================================================================
# üíæ CACHING CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_PREFIX=capeai:cache
REDIS_MAX_CONNECTIONS=50

# Cache Categories
USER_CACHE_TTL=1800
AI_RESPONSE_CACHE_TTL=3600
ANALYTICS_CACHE_TTL=300
SESSION_CACHE_TTL=86400

# =============================================================================
# üîç SEARCH & INDEXING
# =============================================================================
SEARCH_ENABLED=true
FULL_TEXT_SEARCH=true
SEARCH_INDEX_UPDATE_INTERVAL=3600
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# üìà ANALYTICS & BUSINESS INTELLIGENCE
# =============================================================================
# Google Analytics (Frontend)
GOOGLE_ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Mixpanel (Optional)
MIXPANEL_ENABLED=false
MIXPANEL_TOKEN=your-mixpanel-token

# Custom Analytics
CUSTOM_ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60

# =============================================================================
# üöÄ PERFORMANCE OPTIMIZATION
# =============================================================================
# API Performance
API_COMPRESSION=true
API_ETAG_ENABLED=true
API_CACHE_CONTROL=public, max-age=300

# Database Performance
DB_QUERY_CACHE=true
DB_CONNECTION_POOLING=true
DB_SLOW_QUERY_LOG=true

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# =============================================================================
# üß™ TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/capeai_test
TEST_REDIS_URL=redis://localhost:6379/15
MOCK_AI_RESPONSES=false
TEST_EMAIL_BACKEND=console
DISABLE_RATE_LIMITING_IN_TESTS=true

# =============================================================================
# üîß DEVELOPMENT CONFIGURATION
# =============================================================================
# Hot Reload
AUTO_RELOAD=false
DEBUG_TOOLBAR=false

# API Documentation
DOCS_ENABLED=true
REDOC_ENABLED=true
OPENAPI_URL=/api/openapi.json

# Development Tools
PROFILING_ENABLED=false
SQL_ECHO=false
PRETTY_JSON=true

# =============================================================================
# üåç INTERNATIONALIZATION
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LOCALES=["en", "es", "fr", "de", "it", "pt", "ja", "ko", "zh"]
TIMEZONE=UTC
DATE_FORMAT=ISO8601

# =============================================================================
# üìä THIRD-PARTY INTEGRATIONS
# =============================================================================
# Stripe (for payments)
STRIPE_ENABLED=false
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS S3 (for file storage)
AWS_ENABLED=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# üì± MOBILE & PWA CONFIGURATION
# =============================================================================
PWA_ENABLED=true
PUSH_NOTIFICATIONS=false
OFFLINE_SUPPORT=true
SERVICE_WORKER_ENABLED=true

# =============================================================================
# üö® ALERTING & NOTIFICATIONS
# =============================================================================
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# Alert Thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
ERROR_RATE_THRESHOLD=5

# =============================================================================
# üè• HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
DEEP_HEALTH_CHECKS=true
EXTERNAL_HEALTH_CHECKS=true

# Health Check Endpoints
DB_HEALTH_CHECK=true
REDIS_HEALTH_CHECK=true
AI_PROVIDERS_HEALTH_CHECK=true
EMAIL_HEALTH_CHECK=false

# =============================================================================
# END OF CONFIGURATION
# =============================================================================