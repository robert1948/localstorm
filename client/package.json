{
  "name": "tailstorm",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite preview",
    "build": "vite build && npm run cache-bust && npm run copy",


    "cache-bust": "node ../scripts/cache-bust.cjs",
    "copy": "if [ \"$INSIDE_DOCKER\" != \"true\" ]; then echo 'ðŸ“¦ Copying to backend...'; mkdir -p ../backend/app/static && rm -rf ../backend/app/static/* && cp -a dist/. ../backend/app/static/; else echo 'ðŸš« Skipping copy in Docker'; fi",

    "upload": "bash ../scripts/upload-to-s3.sh",
    "deploy:static": "bash ../scripts/deploy-static-assets.sh",
    "preserve:png": "bash ../scripts/preserve-png-images.sh",
    "verify:png": "bash ../scripts/verify-png-images.sh",

    "heroku-postbuild": "npm install && npm run build && npm run upload && npm run preserve:png",
    "purge:cloudflare": "echo 'ðŸ”„ Add curl call to Cloudflare API here'",

    "lint": "eslint . --max-warnings 10",
    "reorganize:assets": "bash ../scripts/reorganize-assets.sh"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.19.1",
    "lucide-react": "^0.522.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.3",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.1.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
